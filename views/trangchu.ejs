<html>

<head>
    <title>Demo socket</title>
    <script src="jquery.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script>
        var socket = io("http://localhost:8000");
        socket.on("serversendmau",function(data){
            $("body").attr("bgColor",data);
        })
        
        $(document).ready(function () {
           $("#do").click(function(){
               socket.emit("clientsendmau","red")
           });
           $("#xanh").click(function(){
               socket.emit("clientsendmau","blue")
           });
           $("#vang").click(function(){
               socket.emit("clientsendmau","yellow")
           });

        });
    </script>
    <style>
    #do, #xanh, #vang{width:300px;height: 70px}
    #do{background-color: red}
    #xanh{background-color: blue}
    #vang{background-color: yellow}
    </style>
</head>

<body bgColor="pink">
    <div id="do"></div>
    <div id="xanh"></div>
    <div id="vang"></div>
</body>

</html>